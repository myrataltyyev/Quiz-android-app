<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phoenix.quiz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main_screen.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main_screen.SignUp" />
        <activity android:name=".Main_screen.SignIn" />
        <activity android:name=".MakeQuestions"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".CreateCourse" />
        <activity android:name=".SelectAnswers" />
        <activity android:name=".HomeProfessor" />
        <activity android:name=".HomeStudent" />
        <activity android:name=".CourseQuestions" />
        <activity android:name=".EditQuestions"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".ResultDetails" />
    </application>

</manifest>